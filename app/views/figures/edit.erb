  <%= @figure.name %>

<form action="/figures/<%=@figure.id%>" method="post">

  <label for="">Edit Name:</label><br>
  <input type="text" name="figure[name]" id="figure_name"><br>

  <!-- <%= @figure.titles %> -->

  <label for="">Edit Title:</label><br>
  <input type="text" name="title[name]" id="new_title"><br>
  <% Title.all.each do |title| %>
    <%= title.name %>
    <input id="title_<%=title.id%>" type="checkbox" name="figure[title_ids][]" value="<%=title.id%>">
  <% end %>

  <%= @figure.landmarks %>

  <label for="">Edit Landmark:</label><br>
  <input type="text" name="landmark[name]" id="new_landmark"><br>
    <% Landmark.all.each do |landmark| %>
      <input id="landmark_<%=landmark.id%>" type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>">
    <% end %>

  <input type="submit" value="Edit Figure">

</form>
